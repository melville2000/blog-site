<%- include("../partials/header_admin.ejs") %>

<a href="/dashboard"><h3>&larr;Back</h3></a>

<div class="admin-title">
    <h2>Edit Post</h2>
    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE" class="btn btn-admin" style="color: aliceblue;"></form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
    <label for="Title"> <b>Title</b> </label>
    <input type="text" name="title" placeholder="Enter Title" id="" value="<%= data.title %>">

    <label for="Title"> <b>Content</b> </label>
    <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

    <input type="submit" value="Update Post" class="btn">
</form>